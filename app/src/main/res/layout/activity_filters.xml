<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gavinrob.electyourelectives.FiltersActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/topLanguage">
    <ToggleButton
        android:id="@+id/javaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="javaButton"
        android:textOff="Java"
        android:textOn="Java"/>

    <ToggleButton
        android:id="@+id/cppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cppButton"
        android:textOff="C++"
        android:textOn="C++"/>

    <ToggleButton
        android:id="@+id/cButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cButton"
        android:textOff="C"
        android:textOn="C"/>

    <ToggleButton
        android:id="@+id/jsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jsButton"
        android:textOff="JavaScript"
        android:textOn="JavaScript"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topLanguage">

        <ToggleButton
            android:id="@+id/pythonButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pythonButton"
            android:textOff="Python"
            android:textOn="Python"/>



    </LinearLayout>

</RelativeLayout>
